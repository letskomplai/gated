{
  "name": "@letskomplai/gated",
  "version": "0.2.0",
  "repository": "https://github.com/letskomplai/gated",
  "description": "A functional feature flagging library for Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "biome lint src/**/*.ts",
    "lint:fix": "biome lint --write src/**/*.ts",
    "format": "biome format --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "prisma": "^6.12.0",
    "table": "^6.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.1.0",
    "@vitest/ui": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ]
}
